<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:padding="10dp"

    >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:menu="@menu/toolbar_menu"
        app:title="Passcrypter"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
        app:titleTextColor="@android:color/black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/modeexfab"

        android:layout_marginLeft="310dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/add"
        app:elevation="30dp"
        app:fabSize="auto" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/addexfab"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:text="Add And Manage"
        android:textAlignment="textStart"
        android:textSize="18dp"
        app:elevation="30dp"
        app:iconGravity="textEnd"
        app:iconPadding="50dp"
        app:iconSize="100dp"
        app:iconTint="@android:color/transparent"
        app:iconTintMode="add"

        />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/modeexfab"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/addexfab"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:text="Select App mode"
        android:textAlignment="textStart"
        android:textSize="18dp"
        app:elevation="30dp"
        app:iconGravity="textEnd"
        app:iconSize="75dp"
        app:iconTint="@android:color/transparent"
        app:iconTintMode="add" />


</RelativeLayout>
