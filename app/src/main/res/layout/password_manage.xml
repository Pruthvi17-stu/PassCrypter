<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- This TextView will show the main data, like the website name -->
    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/edit_password"
        android:text="Item Title"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
     <!-- This is the ImageView for the "edit" icon -->
    <ImageView
        android:id="@+id/edit_password"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/delete_password"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Edit"
        android:padding="8dp"
        android:src="@drawable/add" />
    <!-- This is the ImageView for the "delete" icon -->
    <ImageView
        android:id="@+id/delete_password"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete"
        android:padding="8dp"
        android:src="@drawable/delete"
        />
</RelativeLayout>